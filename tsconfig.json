{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "baseUrl": "src",
        "paths": {
            "App/*": ["app/*"],
            "Components/*": ["app/_shared/components/*"],
            "Directives/*": ["app/_shared/directives/*"],
            "Guards/*": ["app/_shared/guards/*"],
            "Helpers/*": ["app/_shared/helpers/*"],
            "Pipes/*": ["app/_shared/pipes/*"],
            "Services/*": ["app/_shared/services/*"],
            "Environments/*": ["environments/*"],
            "Interfaces/*": ["app/_shared/interfaces/*"],

            "About/*": ["app/about/*"],
            "About/c/*": ["app/about/components/*"],

            "Auth/*": ["app/auth/*"],
            "Auth/c/*": ["app/auth/components/*"],
            "Auth/r/*": ["app/auth/resolvers/*"],
            "Auth/s/*": ["app/auth/services/*"],
            "Auth/d/*": ["app/auth/directives/*"],
            "Auth/p/*": ["app/auth/pipes/*"],

            "ContactDeveloper/*": ["app/contact-developer/*"],
            "ContactDeveloper/c/*": ["app/contact-developer/components/*"],
            "ContactDeveloper/r/*": ["app/contact-developer/resolvers/*"],
            "ContactDeveloper/s/*": ["app/contact-developer/services/*"],
            "ContactDeveloper/d/*": ["app/contact-developer/directives/*"],
            "ContactDeveloper/p/*": ["app/contact-developer/pipes/*"],

            "Donation/*": ["app/donation/*"],
            "Donation/c/*": ["app/donation/components/*"],

            "FAQ/*": ["app/faq/*"],
            "FAQ/c/*": ["app/faq/*"],

            "Hadith/*": ["app/hadith/*"],
            "Hadith/c/*": ["app/hadith/components/*"],
            "Hadith/r/*": ["app/hadith/resolvers/*"],
            "Hadith/s/*": ["app/hadith/services/*"],
            "Hadith/d/*": ["app/hadith/directives/*"],
            "Hadith/p/*": ["app/hadith/pipes/*"],

            "Landing/*": ["app/landing/*"],
            "Landing/c/*": ["app/landing/components/*"],
            "Landing/r/*": ["app/landing/resolvers/*"],
            "Landing/s/*": ["app/landing/services/*"],
            "Landing/d/*": ["app/landing/directives/*"],
            "Landing/p/*": ["app/landing/pipes/*"],

            "Reference/*": ["app/reference/*"],
            "Reference/c/*": ["app/reference/components/*"],
            "Reference/r/*": ["app/reference/resolvers/*"],
            "Reference/s/*": ["app/reference/services/*"],
            "Reference/d/*": ["app/reference/directives/*"],
            "Reference/p/*": ["app/reference/pipes/*"]
        },
        "sourceMap": true,
        "declaration": false,
        "removeComments": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2017", "dom"]
    }
}
